 <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Username</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="User Name" name="displayName" value="<%=user.displayName %>" >
              </div>
              <div class="form-group">
                <label for="PhoneNumberTextField">Phone number</label>
                <input type="tel" class="form-control" id="PhoneNumberTextField"
                placeholder="Phone Number" name="phoneNumber" value="<%= user.phoneNumber %>" >
              </div>
              
               <div class="form-group">
            <label class="lead">Select Province</label>
            <div class="col-sm-5">
                <select id="province" name="province" ></select>
            </div>
        </div><!--/.form-group-->
        <div class="form-group">
            <label class="lead">City</label>
            <div class="col-sm-4">
                <select name="city" id="city" ></select>
            </div>
        </div><!--/.form-group-->

              <div class="form-group">
                <label for="EmailTextField">Email Address</label>
                <input type="email" class="form-control" id="EmailTextField"
                placeholder="Email Address" name="emailAddress" value="<%= user.emailAddress %>"  >
              </div>
              <span class="lead"></i>Sex</span>
                    <select name= "sex" class="sel1">
                        <option></option>
                        <option>Female</option>
                        <option>Male</option>
                        
                    </select>
                    <br>
                <span class="lead"></i>Date of Birth</span>
                    <div class="col-md-6">
                      <input type="date" class="form-control" id="birthDate" name="birthDate" 
                      value="" placeholder="Date of Birth">
                    </div>
                    

                <label class="lead">Hourly rate ($)</label>
                      <input type="number" class="form-control" id="hourlyRate" name="hourlyRate" value="<%= user.hourlyRate %>" placeholder="Enter your hourly rate. Enter number only" >
                    
                    <label for="comment">About me:</label>
          <textarea name="aboutMe" class="form-control" rows="5" id="comment" placeholder = "About me" > <%= user.aboutMe %></textarea>
          <br>

              <button type="submit"  class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/trainer/displayUpdatePersonalInformation/" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>